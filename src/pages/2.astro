---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Profit from '../components/Profit.astro';
import Footer from '../components/Footer.astro'
import BtnMobile from '../components/BtnMobile.astro';
import CtaHeader from '../components/CtaHeader.astro';
---

<Layout title="Welcome to Astro.">
	<main>
        <BtnMobile />
        <CtaHeader />
		<Hero />
        <Profit />
