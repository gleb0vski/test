---
import '../styles/lity.min.css'
import Ptext from './Ptext.astro';
const { name, position, img_src, description, img_comment} = Astro.props;
---

<div class="t-card">
    <div class="t-card-content">
        <div class="t-card-heading">
            <img src={img_src} alt="">
            <div class="t-card-heading-text">
                <p class="t-card-name">{name}</p>
                <p class="t-card-position">{position}</p>
            </div>
        </div>
        <div class="t-card-description">
           <Ptext body={description} />
        </div>
        <a href={img_comment} data-lity>Посмотреть кейс в деталях</a>
    </div>
</div>

<style>

    .t-card {
        padding: 2rem;
        background: #fff;
        border-radius: 20px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }

    .t-card-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .t-card-heading {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .t-card-name {
        font-size: 20px;
        font-weight: 700;

    }

    .t-card-position {
        font-size: 14px;
        font-weight: 500;
    }


    .t-card-heading img{
        width: 65px;
        height: auto;
        border-radius: 50%;

    }

    .t-card-description {
        margin-top: 20px;
        border: 2px solid #3063D3;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 14px 24px;
    }

    .t-card-description p {
        font-size: 12px;
    }

    .t-card a {
        width: 100%;
        text-align: center;
        padding: 1.5rem 0;
        padding-bottom: 0;
    }
    .lity-content {
        padding: 4rem !important;
    }

    
</style>

