<section>

<!-- Features -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <!-- Grid -->
  <div class="md:grid md:grid-cols-2 md:items-start md:gap-12 xl:gap-36 sm:gap-8">

    <!-- End Col -->

    <div class="mt-5 sm:mt-10 lg:mt-0">
      <div class="sm:space-y-2">
        <!-- Title -->
          <h2 class="font-bold text-3xl lg:text-4xl text-gray-800 dark:text-neutral-200">
          Скажите откровенно.
          </h2>
          <h3 class="text-gray-800 pt-2 pb-8">Вам такое знакомо?</h3>
        <!-- End Title -->

        <!-- List -->
        <ul class="space-y-2 sm:space-y-4 ">
          <li class="flex gap-x-3">
            <span class="mt-0.5 size-5 width-full flex justify-center items-center rounded-full text-blue-600 dark:bg-blue-800/30 dark:text-blue-500">
